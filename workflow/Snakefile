import pandas as pd
from pathlib import Path

# Get the general configuration options
root_fp = config["all"]["root_fp"]
output_fp = config["all"]["output_fp"]
sbs_samples_fp = config["all"]["sbs_samples_fp"]
phenotype_samples_fp = config["all"]["phenotype_samples_fp"]

# Print the root path
print(f"Root path: {root_fp}")

# Print the output path appended to the root path
output_full_path = Path(root_fp) / output_fp
print(f"Output path: {output_full_path}")

# Load the sample TSV files with pandas
sbs_samples_df = pd.read_csv(sbs_samples_fp, sep="\t")
phenotype_samples_df = pd.read_csv(phenotype_samples_fp, sep="\t")

# Print the shape of each DataFrame
print(f"SBS samples shape: {sbs_samples_df.shape}")
print(f"Phenotype samples shape: {phenotype_samples_df.shape}")
